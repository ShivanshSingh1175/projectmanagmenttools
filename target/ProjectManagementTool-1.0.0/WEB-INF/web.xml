<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Application name and description -->
    <display-name>Project Management Tool</display-name>
    <description>Online Project Management Tool for team collaboration</description>

    <!-- Session configuration -->
    <session-config>
        <cookie-config>
            <secure>false</secure>
            <http-only>true</http-only>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
        <timeout>30</timeout>
    </session-config>

    <!-- Servlet mappings (Annotation-based, but kept for reference) -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pmt.controllers.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.pmt.controllers.AdminDashboardServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin-dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProjectManagerDashboardServlet</servlet-name>
        <servlet-class>com.pmt.controllers.ProjectManagerDashboardServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProjectManagerDashboardServlet</servlet-name>
        <url-pattern>/pm-dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeamDashboardServlet</servlet-name>
        <servlet-class>com.pmt.controllers.TeamDashboardServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeamDashboardServlet</servlet-name>
        <url-pattern>/team-dashboard</url-pattern>
    </servlet-mapping>

    <!-- Filter mappings (Annotation-based, but kept for reference) -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.pmt.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.pmt.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/admin-dashboard</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/pm-dashboard</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/team-dashboard</url-pattern>
    </filter-mapping>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error handling -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/jsp/access-denied.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/jsp/server-error.jsp</location>
    </error-page>

    <!-- Context parameters -->
    <context-param>
        <param-name>app-version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <context-param>
        <param-name>app-title</param-name>
        <param-value>Project Management Tool</param-value>
    </context-param>

    <!-- Simple health servlet for local smoke tests (serves plain text) -->
    <servlet>
        <servlet-name>HealthServlet</servlet-name>
        <servlet-class>com.pmt.runner.HealthServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>HealthServlet</servlet-name>
        <url-pattern>/pmt-health</url-pattern>
    </servlet-mapping>

    <!-- Default servlet mapping for static resources to ensure CSS/JS are served in embedded runner -->
    <servlet>
        <servlet-name>static</servlet-name>
        <servlet-class>com.pmt.runner.StaticResourceServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>static</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>static</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>

</web-app>
